    bool "Supports shell show info"
    default y
    help
        Enable this option to support shell show info.

config SHELL_CLS_WHEN_LOGIN
    bool "Supports shell clear screen when login"
    default y
    help
        Enable this option to support shell clear screen when login.

config SHELL_DEFAULT_USER
    string "Shell default user"
    default "omni"
    help
        Set the default user of shell.

config SHELL_DEFAULT_USER_PASSWORD
    string "Shell default user password"
    default ""
    help
        Set the default user password of shell.


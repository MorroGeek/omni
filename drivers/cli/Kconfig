menuconfig OMNI_DRIVERS_CLI
    bool "Command Line Interface (CLI) driver"
    default n
    help
        Enable the CLI (Command Line Interface) driver configuration.

if OMNI_DRIVERS_CLI

config SHELL_TASK_WHILE
    bool "Supports shell task while"
    default y
    help
        Enable this option to support shell task while.

config SHELL_USING_CMD_EXPORT
    bool "Supports shell command export"
    default y
    help
        Enable this option to support shell command export.

config SHELL_USING_COMPANION
    bool "Supports shell companion"
    default y
    help
        Enable this option to support shell companion.

config SHELL_SUPPORT_END_LINE
    bool "Supports shell tailing mode"
    default y
    help
        Enable this option to support shell tailing mode.

config SHELL_HELP_LIST_USER
    bool "Supports shell help list user"
    default n
    help
        Enable this option to support shell help list user.

config SHELL_HELP_LIST_VAR
    bool "Supports shell help list var"
    default n
    help
        Enable this option to support shell help list var.


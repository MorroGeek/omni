    bool "Supports shell help list key"
    default n
    help
        Enable this option to support shell help list key.

config SHELL_HELP_SHOW_PERMISSION
    bool "Supports shell help show permission"
    default y
    help
        Enable this option to support shell help show permission.

config SHELL_ENTER_LF
    bool "Supports shell enter LF"
    default y
    help
        Enable this option to support shell enter LF.

config SHELL_ENTER_CR
    bool "Supports shell enter CR"
    default y
    help
        Enable this option to support shell enter CR.

